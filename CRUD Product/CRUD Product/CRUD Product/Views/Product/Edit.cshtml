@model CRUD_Product.Models.Entities.Product
@{
    ViewBag.Title = "Edit";
}

<h2>Update Product</h2>
<form action="/Product/Edit" method="post">

    Id: <input type="number" name="Id" value="@Model.Id" readonly class="form-control" />
    Name : <input type="text" name="Name" value="@Model.Name" class="form-control" />
    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    <br>Quantity : <input type="number" name="Qty" value="@Model.Qty" class="form-control" />
    @Html.ValidationMessageFor(m => m.Qty, "", new { @class = "text-danger" })
    <br>Price : <input type="number" step="0.01" name="Price" value="@Model.Price" class="form-control" />
    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
    <br>Description : <input type="text" name="Description" value="@Model.Description" class="form-control" />
    <br>
    <input type="submit" value="update" class="btn btn-primary" />
</form>


