@model List<CRUD_Product.Models.Entities.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<a href="/Product/Create/" class="btn btn-primary">Add Product</a>
<br><br>
<a href="/Cart/Cart/" class="btn btn-success">Cart</a>
<br>
<hr>
<h3>All Products</h3>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Description</th>
        
    </tr>
    
       @foreach(var p in Model)
       {
<tr>
    <td>@p.Id</td>
    <td>@p.Name</td>
    <td>@p.Qty</td>
    <td>@p.Price</td>
    <td>@p.Description</td>
    <td><a href="/Product/Edit/@p.Id" class="btn btn-success">Edit</a></td>
    <td><a href="/Product/Delete/@p.Id" class="btn btn-danger">Delete</a></td>
    <td><a href="/Cart/AddToCart/@p.Id" class="btn btn-success">Add to Cart</a></td>
</tr>
       }

</table>
